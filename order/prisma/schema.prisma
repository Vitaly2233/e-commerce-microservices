generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model orderProduct {
  ordersId   Int
  productsId Int
  orders     orders   @relation(fields: [ordersId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "FK_OrderProduct_Orders_ordersId")
  products   products @relation(fields: [productsId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "FK_OrderProduct_Products_productsId")

  @@id([ordersId, productsId], map: "PK_OrderProduct")
  @@index([productsId], map: "IX_OrderProduct_productsId")
}

model orders {
  id           Int            @id(map: "PK_Orders") @default(autoincrement())
  name         String         @db.VarChar(100)
  userId       Int
  orderProduct orderProduct[]
  users        users          @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "FK_Orders_Users_UserId")

  @@index([userId], map: "IX_Orders_UserId")
}

model products {
  id           Int            @id(map: "PK_Products") @default(autoincrement())
  name         String         @db.VarChar(100)
  orderProduct orderProduct[]
}

model users {
  id       Int      @id(map: "PK_Users") @default(autoincrement())
  password String
  token    String?
  username String   @db.VarChar(100)
  email    String   @unique(map: "IX_Users_Email")
  orders   orders[]
}
